{
    "appDir": "../../public",

    "baseUrl": "./js",

    "dir": "../../public_dist/",

    "paths": {
        "requirejs": "../vendor/requirejs/require"
    },

    "modules": [
        {
            "name": "app",
            "include": [
                "requirejs",
                "app"
            ]
        }
    ],

    "removeCombined": true,

    "optimize": "uglify",

    "uglify": {
        "max_line_length": 200,
        "beautify": false
    },

    "optimizeCss": "standard",

    "shim": {}
}
